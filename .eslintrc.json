{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "overrides": [
      {
        "files": ["**/*.cy.js"],
        "env": { "cypress/globals": true },
        "plugins": ["cypress"],
        "extends": ["plugin:cypress/recommended"],
        "rules": {
          "cypress/no-unnecessary-waiting": "off",
          "no-unused-vars": "off"
        }
      }
      {
        "files": ["**/*.test.js"], 
        "env": { "jest/globals": true }, 
        "extends": ["plugin:jest/recommended"],
        "plugins": ["jest"],
        "rules": {
          "jest/no-disabled-tests": "warn"
        }
      }
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    }
  }
